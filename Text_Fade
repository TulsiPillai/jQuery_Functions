<html>
<head>
	<title>Page Title</title>
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
	<script type="text/javascript" src="jquery.min.js"></script>
</head>
<style type="text/css">
	
</style>
<body>
	<p>The text is fading away</p>
	<button id="fade">Fade Out</button>
	<button id="fadein">Fade In</button>
	<script>
		$("#fade").click(function() {    	/* selecting elements by their id $("elementid")*/ 
			$("p").fadeOut("slow", function(){
				alert("Fadeout complete");
			});
		});
		$("#fadein").click(function() {    	/* selecting elements by their id $("elementid")*/ 
			$("p").fadeIn();
		});
	</script>

</body>
</html>
